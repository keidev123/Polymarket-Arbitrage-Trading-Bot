PRIVATE_KEY=
DEBUG="false"

# Optional: capture ALL console output to a file (see src/index.ts).
# LOG_FILE_PATH supports "{date}" placeholder for daily logs.
LOG_DIR="logs"
LOG_FILE_PREFIX="bot"
# LOG_FILE_PATH="logs/bot-{date}.log"


# === Copytrade bot behavior ==================================================

# Markets to run (comma-separated)
COPYTRADE_MARKETS="btc"

# If "true", waits until the next 15m boundary before starting the bot.
# If "false", starts immediately (useful to resume unfinished hedges from copytrade-state.json).
COPYTRADE_WAIT_FOR_NEXT_MARKET_START="false"

# Poll interval for tick loop (ms)
COPYTRADE_POLL_MS="50"

# Buy settings
COPYTRADE_THRESHOLD="0.47"
COPYTRADE_SHARES="5"
COPYTRADE_TICK_SIZE="0.01"

# NegRisk order mode for the bot. (Also see NEG_RISK below for allowances.)
COPYTRADE_NEG_RISK="false"

# === Allowance / approval helper settings ===================================

# Allowance script (src/security/allowance.ts) uses NEG_RISK for extra approvals.
# Keep this consistent with COPYTRADE_NEG_RISK.
NEG_RISK="false"

# REVERSAL_DELTA=0.03
MAX_BUYS_PER_SIDE=1
# COPYTRADE_MAX_SUM_AVG=0.99

# COPYTRADE_POLL_MS=200                    # Reduced from 1000ms
COPYTRADE_MIN_POLL_MS=100                # Reduced from 500ms
COPYTRADE_MAX_POLL_MS=2000               # Reduced from 5000ms
# COPYTRADE_USE_FAK=true                   # Note: Still uses GTC with aggressive pricing
# COPYTRADE_FIRE_AND_FORGET=true           # Don't wait for confirmation (default: true)
# COPYTRADE_PRICE_BUFFER=0.03              # 3 cent buffer (was 0.01)
COPYTRADE_ORDER_CHECK_DELAY_MS=100      # Reduced from 500ms
COPYTRADE_ORDER_RETRY_DELAY_MS=300      # Reduced from 1000ms
COPYTRADE_ORDER_MAX_ATTEMPTS=2          # Reduced from 3

# COPYTRADE_SECOND_SIDE_BUFFER=0.03

# SPEED & OPPORTUNITY CATCHING OPTIMIZATIONS
REVERSAL_DELTA=0.02
REVERSAL_DELTA_THRESHOLD_PERCENT=0.1                       # Reduced from 0.020
COPYTRADE_DEPTH_BUY_DISCOUNT_PERCENT=0.02     # Reduced from 0.05
COPYTRADE_SECOND_SIDE_BUFFER=0.003            # Reduced from 0.01
COPYTRADE_PRICE_BUFFER=0.05                   # Increased from 0.03                   # Increased from 0.499
COPYTRADE_MAX_SUM_AVG=0.99                    # Increased from 0.98                           # Reduced from 4

# Keep existing speed optimizations
COPYTRADE_FIRE_AND_FORGET=true
COPYTRADE_ADAPTIVE_POLLING=true
COPYTRADE_DYNAMIC_PRICE_BUFFER=true
COPYTRADE_USE_FAK=true